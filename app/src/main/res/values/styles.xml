<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/night_mode_color</item>
        <item name="colorPrimaryDark">@color/night_mode_dark_color</item>
        <item name="colorAccent">@color/night_mode_color</item>
        <item name="android:windowBackground">@color/main_bg_color</item>
        <item name="android:text">@color/text_color</item>
        <item name="android:dialogTitle">@color/text_color</item>
        <item name="android:title">@color/text_color</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/night_mode_color_night</item>
        <item name="colorPrimaryDark">@color/night_mode_dark_color_night</item>
        <item name="colorAccent">@color/night_mode_color_night</item>
        <item name="android:windowBackground">@color/main_bg_color_night</item>
    </style>

</resources>
